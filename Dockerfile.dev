# استخدام صورة Node.js رسمية كصورة أساسية للتطوير
FROM node:18-alpine

# تثبيت التبعيات المطلوبة
RUN apk add --no-cache libc6-compat

# تعيين مجلد العمل
WORKDIR /app

# نسخ ملفات التبعيات
COPY package.json package-lock.json* ./

# تثبيت جميع التبعيات (بما في ذلك devDependencies)
RUN npm ci

# نسخ الكود المصدري
COPY . .

# تعيين متغيرات البيئة للتطوير
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1

# فتح المنفذ
EXPOSE 3000

# تشغيل خادم التطوير
CMD ["npm", "run", "dev"]
