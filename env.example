# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_SITE_NAME="Your Portfolio"
NEXT_PUBLIC_SITE_DESCRIPTION="Personal portfolio website showcasing projects and skills"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your-google-analytics-id
NEXT_PUBLIC_GTM_ID=your-google-tag-manager-id

# Contact Form (Optional)
NEXT_PUBLIC_CONTACT_EMAIL=your-email@example.com
NEXT_PUBLIC_CONTACT_PHONE=+1234567890

# Social Media
NEXT_PUBLIC_GITHUB_URL=https://github.com/your-username
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/your-profile
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/your-username
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/your-username

# Performance Monitoring (Optional)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Database (Optional)
DATABASE_URL=your-database-url
MONGODB_URI=your-mongodb-uri

# Email Service (Optional)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# API Keys (Optional)
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token
NEXT_PUBLIC_WEATHER_API_KEY=your-weather-api-key

# Development
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Build Configuration
NEXT_PUBLIC_BUILD_TIME=2024-01-01T00:00:00Z
NEXT_PUBLIC_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_COMMENTS=true

# Security
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# External Services
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Content Management
NEXT_PUBLIC_CMS_URL=your-cms-url
NEXT_PUBLIC_CMS_TOKEN=your-cms-token

# Third Party Integrations
NEXT_PUBLIC_DISCORD_WEBHOOK=your-discord-webhook-url
NEXT_PUBLIC_SLACK_WEBHOOK=your-slack-webhook-url

# Monitoring
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_ENABLE_DEBUG=false
